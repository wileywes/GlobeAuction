@model GlobeAuction.Models.DonationItemViewModel

<tr>
    <td>
        @Html.CheckBoxFor(m => m.IsSelected, new { @class = "chkSelect" })
        @Html.HiddenFor(m => m.DonationItemId)
    </td>
    <td>
        @Html.DisplayFor(m => m.Category)
    </td>
    <td>
        @Html.DisplayFor(m => m.Description)
    </td>
    <td>
        @Html.DisplayFor(m => m.Restrictions)
    </td>
    <td>
        @Html.DisplayFor(m => m.ExpirationDate)
    </td>
    <td>
        @Html.DisplayFor(m => m.DollarValue)
    </td>
    <td class="text-nowrap">
        @Html.ActionLink("Edit", "Edit", "DonationItems", new { id = Model.DonationItemId }, null) |
        @Html.ActionLink("Details", "Details", "DonationItems", new { id = Model.DonationItemId }, null) |
        @Html.ActionLink("Delete", "Delete", "DonationItems", new { id = Model.DonationItemId }, null)
    </td>
</tr>