@using GlobeAuction.Models
@model GlobeAuction.Models.ItemsViewModel

@{
    ViewBag.Title = "Auction Items";
}

<h2>Auction Items</h2>

<table class="table table-striped table-bordered" id="auctionItemsTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmptyAuctionItem.UniqueItemNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmptyAuctionItem.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmptyAuctionItem.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmptyAuctionItem.StartingBid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmptyAuctionItem.BidIncrement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmptyAuctionItem.CreateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmptyAuctionItem.UpdateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmptyAuctionItem.UpdateBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmptyAuctionItem.WinningBidderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmptyAuctionItem.WinningBid)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.AuctionItems)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UniqueItemNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartingBid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BidIncrement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WinningBidderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WinningBid)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.AuctionItemId }) |
                @Html.ActionLink("Details", "Details", new { id = item.AuctionItemId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.AuctionItemId })
            </td>
        </tr>
    }

</table>


<h2>Donation Items not yet Setup for Auction</h2>

@using (Html.BeginForm("SubmitSelectedDonationItems", "AuctionItems", FormMethod.Post))
{
    <table class="table table-striped table-bordered" id="donationItemsTable">
        <thead>
            <tr>
                <th>Select</th>
                <th>
                    @Html.DisplayNameFor(model => model.EmptyDonationItem.DonationItemId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmptyDonationItem.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmptyDonationItem.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmptyDonationItem.Restrictions)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmptyDonationItem.ExpirationDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmptyDonationItem.DollarValue)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.DonationsNotInAuctionItem)
            {
                <tr>
                    <td>
                        @Html.CheckBoxFor(modelItem => item.IsSelected)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonationItemId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Restrictions)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpirationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DollarValue)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "DonationItems", new { id = item.DonationItemId }, null) |
                        @Html.ActionLink("Details", "Details", "DonationItems", new { id = item.DonationItemId }, null) |
                        @Html.ActionLink("Delete", "Delete", "DonationItems", new { id = item.DonationItemId }, null)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}