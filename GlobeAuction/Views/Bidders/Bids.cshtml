@model IEnumerable<GlobeAuction.Models.BidViewModel>

<link rel="stylesheet" type="text/css" href="~/DataTables/datatables.min.css" />
<script type="text/javascript" src="~/DataTables/datatables.min.js"></script>

@{
    ViewBag.Title = "My Active Bids";
}

<h3>
    My Active Bids (#@ViewBag.BidderInfo.BidderNumber - @ViewBag.BidderInfo.LastName)
    <small>
        @Html.ActionLink("Not Me", "Logout")
    </small>
</h3>

<p>
    @Html.ActionLink("Pay for Winnings", "ReviewBidderWinnings", "Invoices", new { bid = ViewBag.BidderInfo.BidderId, email = ViewBag.BidderInfo.Email })
</p>


<div class="panel panel-default">
    <div class="panel-heading"><strong>Enter a New Bid</strong></div>
    <div class="panel-body">
        @using (Html.BeginForm("EnterBid", "Bidders", FormMethod.Get, new { @class = "form-inline" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="sr-only" for="auctionItemId">Auction Item No.</label>
                <div class="input-group">
                    <div class="input-group-addon">#</div>
                    <input type="text" class="form-control" id="auctionItemId" name="auctionItemId" placeholder="123">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Start Bidding</button>
        }
    </div>
</div>

<div class="panel panel-success">
    <div class="panel-heading"><strong>Bids You are Winning</strong></div>
    <div class="panel-body">
        <table class="table table-striped table-bordered" id="winningTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AuctionItem.UniqueItemNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AuctionItem.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BidAmount)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Where(b => b.IsWinning))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AuctionItem.UniqueItemNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AuctionItem.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BidAmount)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "EnterBid", new { auctionItemId = item.AuctionItem.UniqueItemNumber })
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td></td>
                    <td align="right"><strong>Total:</strong></td>
                    <td>
                        <strong>
                            @Model.Where(b => b.IsWinning).Select(b => b.BidAmount).DefaultIfEmpty(0).Sum().ToString("C")
                        </strong>
                </td>
                <td></td>
            </tr>
        </tfoot>
    </table>
</div>
</div>

<div class="panel panel-warning">
    <div class="panel-heading"><strong>Bids You are Losing</strong></div>
    <div class="panel-body">
        <table class="table table-striped table-bordered" id="losingTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AuctionItem.UniqueItemNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AuctionItem.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BidAmount)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Where(b => !b.IsWinning))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AuctionItem.UniqueItemNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AuctionItem.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BidAmount)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "EnterBid", new { auctionItemId = item.AuctionItem.UniqueItemNumber })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<script type="text/javascript">

    $(document).ready(function () {
        $('#winningTable').dataTable({
            "iDisplayLength": 100,
            dom: 'Brt',
            stateSave: true,
            buttons: []
        });

        $('#losingTable').dataTable({
            "iDisplayLength": 100,
            dom: 'Brt',
            stateSave: true,
            buttons: []
        });

        setTimeout(function () {
            window.location.reload(1);
        }, 60000);
    });
</script>
