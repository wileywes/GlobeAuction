@model IEnumerable<GlobeAuction.Models.BidViewModel>

<link rel="stylesheet" type="text/css" href="~/DataTables/datatables.min.css" />
<script type="text/javascript" src="~/DataTables/datatables.min.js"></script>

@{
    ViewBag.Title = "My Active Bids";
}

<h2>My Active Bids (#@ViewBag.BidderInfo.BidderNumber - @ViewBag.BidderInfo.LastName)</h2>

<p>
    @Html.ActionLink("Pay for Winnings", "ReviewBidderWinnings", "Invoices", new { bid = ViewBag.BidderInfo.BidderId, email = ViewBag.BidderInfo.Email })
</p>

@using (Html.BeginForm("EnterBid", "Bidders", FormMethod.Get, new { @class = "form-inline" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="panel panel-default">
        <div class="panel-heading">Enter a New Bid</div>
        <div class="panel-body">
            <div class="form-group">
                <label class="sr-only" for="auctionItemId">Auction Item No.</label>
                <div class="input-group">
                    <div class="input-group-addon">#</div>
                    <input type="text" class="form-control" id="auctionItemId" name="auctionItemId" placeholder="123">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Start Bidding</button>
        </div>
    </div>
}

<div class="panel panel-default">
    <div class="panel-heading">Bids You Have Already Placed</div>
    <div class="panel-body">
        <table class="table table-striped table-bordered" id="bidsTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AuctionItem.UniqueItemNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AuctionItem.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BidAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsWinning)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AuctionItem.UniqueItemNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AuctionItem.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BidAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsWinning)
                        </td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        $('#bidsTable').dataTable({
            "iDisplayLength": 100,
            dom: 'Bfrtip',
            stateSave: true,
            buttons: []
        });
    });
</script>
