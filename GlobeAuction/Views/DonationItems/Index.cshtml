@model IEnumerable<GlobeAuction.Models.DonationItem>

<link href="https://cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.7/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.js"></script>

@{
    ViewBag.Title = "Donation Items";
}

<h2>Donation Items</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="container">

    <table class="table table-striped table-bordered" id="itemsTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Restrictions)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExpirationDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DollarValue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdateDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Restrictions)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpirationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DollarValue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdateDate)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.DonationItemId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.DonationItemId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.DonationItemId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#itemsTable').dataTable();
        });
    </script>
