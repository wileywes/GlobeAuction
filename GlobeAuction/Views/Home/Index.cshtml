<script type="text/javascript">
  $(window).load(function() {
      $("#lightSlider").lightSlider({
          auto: true,
          autoWidth:true,
          loop: true,
          speed: 600,
          onSliderLoad: function () {
              $('#lightSlider').removeClass('cs-hidden');
          } 
      });
  });
</script>